{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["plugin:shopify/esnext", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": [1, "always-multiline"]
  },
  "plugins": ["react", "prettier"]
}
